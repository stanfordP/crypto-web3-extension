{
  "name": "crypto-web3-extension",
  "version": "2.2.4",
  "description": "Web3 authentication extension for Crypto Trading Journal",
  "engines": {
    "node": ">=20.0.0 <25.0.0"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production",
    "dev": "webpack --mode development --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "playwright test",
    "test:e2e": "playwright test tests/auth-flow.test.ts",
    "test:e2e:security": "playwright test tests/security-compat.test.ts",
    "test:e2e:a11y": "playwright test tests/accessibility.test.ts --project=accessibility",
    "test:e2e:all": "playwright test tests/auth-flow.test.ts tests/security-compat.test.ts tests/accessibility.test.ts",
    "test:unit": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:e2e:all",
    "generate-icons": "node scripts/generate-icons.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "validate": "npm run type-check && npm run lint",
    "version:patch": "npm version patch && node scripts/sync-manifest-version.js",
    "version:minor": "npm version minor && node scripts/sync-manifest-version.js",
    "version:major": "npm version major && node scripts/sync-manifest-version.js",
    "release": "npm run validate && npm run test:unit && npm run build:prod",
    "package": "node scripts/package-extension.js",
    "release:full": "npm run release && npm run package",
    "sync-version": "node scripts/sync-manifest-version.js",
    "check-version": "node scripts/check-version-sync.js",
    "prerelease": "npm run check-version"
  },
  "keywords": [
    "web3",
    "ethereum",
    "siwe",
    "browser-extension",
    "crypto"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "buffer": "^6.0.3",
    "viem": "^2.43.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.1.3",
    "playwright": "^1.57.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "jest-environment-jsdom": {
      "jsdom": "$jsdom"
    }
  }
}
