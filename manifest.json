{
  "manifest_version": 3,
  "name": "Crypto Trading Journal - Web3 Auth",
  "version": "1.0.0",
  "description": "Web3 wallet authentication for Crypto Trading Journal",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "https://cryptojournal.app/*",
    "https://*.cryptojournal.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://cryptojournal.app/*",
        "https://*.cryptojournal.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected-wallet.js"],
      "matches": [
        "http://localhost:3000/*",
        "https://cryptojournal.app/*",
        "https://*.cryptojournal.app/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
